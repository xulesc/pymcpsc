# to format in pep8
for x in `ls *.py`; do autopep8 --in-place --aggressive --aggressive $x; done

Anaconda:
	install

Without Anaconda:
	pip install scipy --user

python setup.py build
python setup.pu install

python tests/



Docker:

docker build -t pymcpsc .

